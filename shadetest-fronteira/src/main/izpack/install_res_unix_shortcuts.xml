<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">
 
	<programGroup defaultName="ShadeTest Cia"/>
	
	<shortcut 
		name="ShadeTest Software" 
		target="chmod +x ${INSTALL_PATH}/jre1.8.0_144/bin/java && ${INSTALL_PATH}/jre1.8.0_144/bin/java -jar shadetest.jar"
		workingDirectory="${INSTALL_PATH}"
		iconFile="${INSTALL_PATH}/foguete.ico"
		programGroup="true"
		desktop="true"
		type="Application"
		encoding="UTF-8" />
		
	<shortcut 
		name="Desinstalar ShadeTest" 
		target="chmod +x ${INSTALL_PATH}/jre1.8.0_144/bin/java && ${INSTALL_PATH}/jre1.8.0_144/bin/java -jar ${INSTALL_PATH}/Uninstaller/uninstaller.jar"
		iconFile="${INSTALL_PATH}/lixeira.ico" 
		programGroup="true"
		desktop="true"
		type="Application"
		encoding="UTF-8" />

</izpack:shortcuts>